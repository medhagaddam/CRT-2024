#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>


int main() {
    int n;
    scanf("%d", &n);
    
    int arr[n];
    int odd_sum = 0, even_sum = 0;
    
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        if (arr[i] % 2 == 0) {
            even_sum += arr[i];
        } else {
            odd_sum += arr[i];
        }
    }
    
    printf("%d\n%d\n", odd_sum, even_sum);
    
    return 0;
}

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    
